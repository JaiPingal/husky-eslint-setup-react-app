{
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:react-hooks/recommended",
        "plugin:local-rules/all"
    ],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react",
        "react-hooks",
        "import",
        "jsx-a11y",
        "jest",
        "local-rules"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": 0,
        "indent": [
            "error",
            2
        ],
        "linebreak-style": 1,
        "quotes": [
            "error",
            "single"
        ],
        "no-console":"warn",
        "prettier/prettier": "off",
        "eqeqeq": "error",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "comma-dangle": "off",
        "react-native/no-inline-styles": "Off",
        "eol-last": "warn",
        "local-rules/no-hardcoded-keys": "error"
    },

    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
